<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.GSMstock.imei"
    version="0.0.1">

    <name>IMEI</name>
    
    <description>
        Get device IMEI
    </description>
    
    <author>karol2312@wp.pl</author>
    
    <license>Apache 2.0</license>
    
    <asset src="www/imei.js" target="imei.js" />
    
    
    <engines>
      <engine name="cordova" version=">=2.9.0" />
    </engines>
    
    
    <!-- android -->
    <platform name="android">
        
         <config-file target="AndroidManifest.xml" parent="/manifest">
                <uses-permission android:name="android.permission.READ_PHONE_STATE" />
         </config-file>
        
        <config-file target="config.xml" parent="/*">
            <feature name="org.apache.cordova.GSMstock.Imei">
                <param name="android-package" value="org.apache.cordova.GSMstock.IMEIplugin" />
            </feature>
        </config-file>

        
        <!-- cordova plugin src files -->
        <source-file src="src/android/IMEIplugin.java" target-dir="src/org/apache/cordova/GSMstock" />
        
       
         
    </platform>
</plugin>